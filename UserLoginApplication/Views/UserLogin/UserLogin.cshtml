@model  UserLoginApplication.Models.IdentityModel
@{
    Layout = "~/Views/Shared/_LayoutNoNav.cshtml";
}
<style>
    footer {
        position: fixed;
        bottom: 0px;
        width: 100%;
        padding: 20px;
        text-align: center;
    }

    label {
        font-weight: bold;
        padding-bottom: 10px;
        margin-top: 10px;
        margin-left: 7px;
    }

    .inputFields {
        margin-left: 5px;
    }

    .wholeForm {
        margin-top: 40px;
        margin-left: 50vh;
    }

    .buttonCustomize {
        margin-left: 5px;
        margin-top: 20px;
    }

    .alertCustomize {
        margin-left: 5px;
        margin-top: 20px;
    }

    @@media (max-width: 414px) {
        .wholeForm {
            margin-left: 40px;
        }
    }

    @@media (max-width: 360px) {
        .wholeForm {
            margin-left: 30px;
        }
    }

    @@media (max-width: 768px) {
        .wholeForm {
            margin-left: 200px;
        }
    }

    @@media (max-width: 820px) {
        .wholeForm {
            margin-left: 220px;
        }
    }

    @@media (max-width: 1024px) {
        .wholeForm {
            margin-left: 350px;
        }
    }

    @@media (max-width: 912px) {
        .wholeForm {
            margin-left: 220px;
        }
    }

    @@media (max-width: 540px) {
        .wholeForm {
            margin-left: 120px;
        }
    }

    @@media (max-width: 412px) {
        .wholeForm {
            margin-left: 45px;
        }
    }

    @@media (max-width: 430px) {
        .wholeForm {
            margin-left: 55px;
        }
    }

    @@media (max-width: 390px) {
        .wholeForm {
            margin-left: 35px;
        }
    }
</style>

<div class="pb-3">
    <h4>User Login</h4>
    <hr />
</div>

<div class="wholeForm ">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

    <div class="form-horizontal">

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-6">
                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control inputFields",@type="email" } })
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-6">
                @Html.PasswordFor(model => model.Password, new { @class = "form-control inputFields" })
                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="row">
                <div>
                    <input type="submit" value="Login" class="btn btn-success buttonCustomize" style="width:50%" />
                </div>
                <div class="col-6">
                    @Html.ActionLink("SSO Login", "", "", new { @class = "btn btn-danger buttonCustomize", @style = "width:70%", @href = "" })
                    @*<a href="" class="btn btn-danger buttonCustomize" style="width:50%" />*@
                </div>
            </div>
        </div>
        @{
            if (!String.IsNullOrEmpty(ViewBag.Message))
            {
                <div class="col-md-4 col-md-offset-4" style="width:34%" align="center">
                    <div class="alertCustomize alert alert-danger">
                        @ViewBag.Message
                    </div>
                </div>
            }
        }
    </div>
    }
</div>

@section Scripts {

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")

    @Scripts.Render("~/bundles/bootstrap")
}

